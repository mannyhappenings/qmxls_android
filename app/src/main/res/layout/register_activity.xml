<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Tvtoolbar"
        android:layout_width="match_parent"
        app:title="Have an account, log in directly"
        app:navigationIcon="@drawable/ic_action_back"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <include layout="@layout/item_sperator"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cellphone number"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/et_register_mobile"
            android:textSize="14sp"
            android:hint="Please enter the phone number"

            style="@style/MyEditText"
            />


    </LinearLayout>
        <include layout="@layout/item_sperator"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification code"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/et_register_yzm"
            style="@style/MyEditText"
            android:paddingLeft="20dp"
            android:layout_width="250dp"
            android:hint="please enter verification code"
          />

        <Button
            android:text="get verification code"
            android:id="@+id/bt_get_yzm"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <include layout="@layout/item_sperator"/>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="password"
            android:layout_marginLeft="10dp"
           android:layout_gravity="left"
            />
        <EditText
            style="@style/MyEditText"

            android:paddingLeft="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_register_pwd"
            android:hint="Please enter a 6-20 digit password"
           />

    </LinearLayout>
        <include layout="@layout/item_sperator"/>


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="registered"
        android:background="#FFD101"

        />

    </LinearLayout>


</LinearLayout>