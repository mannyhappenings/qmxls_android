<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="收款方式"
        android:textColor="#000"
        android:paddingBottom="10dp"
        android:textSize="22sp"
         />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"

        android:background="#F0F0F0"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:orientation="horizontal"
        android:background="@drawable/shape_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/setting_xianjin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="20dp"
            >

            <TextView
                android:text="现金"
                android:textSize="18sp"
                android:textColor="#000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="管理现金账户"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:orientation="horizontal"
        android:background="@drawable/shape_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/setting_weixin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="20dp"
            >

            <TextView
                android:text="微信"
                android:textSize="18sp"
                android:textColor="#000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="收银费率以论坛公告为准"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:orientation="horizontal"
        android:background="@drawable/shape_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/setting_zhihubao"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="20dp"
            >

            <TextView
                android:text="支付宝"
                android:textSize="18sp"
                android:textColor="#000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="收银费率以论坛公告为准"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:orientation="horizontal"
        android:background="@drawable/shape_gray_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/setting_others"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="20dp"
            >

            <TextView
                android:text="其他收款"
                android:textSize="18sp"
                android:textColor="#000"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="标记收款"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>